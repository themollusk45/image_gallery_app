<% provide(:title, 'All users') %>
<div class="row">
	
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>

			<% if current_user?(@user) %>
				<section class="new-gallery">
					<%= render 'shared/gallery_form' %>
				</section>
				<section class="new-pic">
					<%= render 'shared/pic_form' %>
				</section>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h1>All users</h1>
		

		<div class="users">
			<%= render 'user' %>
		</div>

		
	</div>
</div>