<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<a href="<%= user_path(@user) %>">
  				<%= gravatar_for @user, size: 52 %>
			</a>
			<h1>
  				<%= @user.name %>
			</h1>
			<span> </br>
  				
			</span>
			<span>
				<%= pluralize(current_user.pics.count, "pic") %>
  				<%= pluralize(current_user.galleries.count, "gallery") %>
			</span>

			<% if current_user?(@user) %>
				<section class="new-gallery">
					<%= render 'shared/gallery_form' %>
				</section>
				<section class="new-pic">
					<%= render 'shared/pic_form' %>
				</section>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<% if @user.galleries.any? %>
			<h3>Galleries (<%= @user.galleries.count %>)</h3>
			<div class="galleries">
				<%= render @galleries %>
				<%#= render :partial => "shared/gallery", :collection => @galleries %>
			</div>
			<%= will_paginate @galleries %>
		<% end %>
	</div>
</div>

