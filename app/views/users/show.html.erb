<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<% if current_user?(@user) %>
				<section class="new-gallery">
					<%= render 'shared/gallery_form' %>
				</section>
				<section class="new-pic">
					<%= render 'shared/pic_form' %>
				</section>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<% if @user.galleries.any? %>
			<h3>Galleries (<%= @user.galleries.count %>)</h3>
			<ol class="galleries">
				<%= render @galleries %>
			</ol>
			<%= will_paginate @galleries %>
		<% end %>
	</div>
</div>