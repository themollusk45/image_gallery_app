<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>

			<% if current_user?(@user) %>
				<section class="new-gallery">
					<%= render 'shared/gallery_form' %>
				</section>
				<section class="new-pic">
					<%= render 'shared/pic_form' %>
				</section>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<% if @user.galleries.any? %>
			<h3>Galleries (<%= @user.galleries.count %>)</h3>
			<div class="galleries", id="users-galleries">
				<%#= render @galleries %>
				<%= render :partial => "shared/gallery" %>
			</div>
			
		<% end %>
	</div>
</div>

