<%= will_paginate @users %>
<% @users.each do |user| %>
	<div>
		<span><%= gravatar_for user, size: 52 %></span>
		<span><%= link_to user.name, user %></span>
		</br>
		<% if current_user.admin? && !current_user?(user) %>
			| <%= link_to "delete", user, method: :delete,
										  data: { confirm: "You sure?" } %>
		<% end %>
		<span><%= pluralize(user.galleries.count, "gallery") %></span>
		<span><%=	pluralize(user.pics.count, "image") %></span>
	</div>
<% end %>
<%= will_paginate @users %>
