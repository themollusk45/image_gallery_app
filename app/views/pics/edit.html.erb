<% provide(:title, "Edit image") %> 
<h1>Update image</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@pic) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label "Choose a gallery" %>
      <%= f.collection_select :gallery_id, @galleries, :id, :title %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
